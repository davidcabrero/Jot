<UserControl
    x:Class="Jot.Controls.QuizControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="{ThemeResource LayerFillColorDefaultBrush}" 
            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
            BorderThickness="1" 
            CornerRadius="8" 
            Padding="16" 
            Margin="8,4">
        
        <StackPanel Spacing="12">
            
            <!-- Question Header -->
            <Border Background="{ThemeResource AccentFillColorDefaultBrush}" 
                    CornerRadius="4" 
                    Padding="8,4">
                <TextBlock Text="Quiz Question" 
                           FontWeight="SemiBold" 
                           FontSize="12" 
                           Foreground="White"/>
            </Border>
            
            <!-- Question Text -->
            <TextBlock x:Name="QuestionText" 
                       Text="" 
                       FontSize="16" 
                       FontWeight="SemiBold" 
                       TextWrapping="Wrap"/>
            
            <!-- Options -->
            <StackPanel x:Name="OptionsPanel" 
                        Spacing="4"/>
            
            <!-- Actions -->
            <StackPanel Orientation="Horizontal" 
                        Spacing="8" 
                        HorizontalAlignment="Right">
                <Button x:Name="ResetButton" 
                        Content="Reset" 
                        Click="ResetButton_Click"
                        Style="{ThemeResource DefaultButtonStyle}"/>
                <Button x:Name="SubmitButton" 
                        Content="Submit" 
                        Click="SubmitButton_Click"
                        Style="{ThemeResource AccentButtonStyle}"
                        IsEnabled="False"/>
            </StackPanel>
            
            <!-- Result -->
            <Border x:Name="ResultPanel" 
                    Background="{ThemeResource LayerFillColorAltBrush}"
                    CornerRadius="4" 
                    Padding="12" 
                    Visibility="Collapsed">
                <StackPanel Spacing="8">
                    <StackPanel Orientation="Horizontal" 
                                Spacing="8">
                        <FontIcon x:Name="ResultIcon" 
                                  FontSize="16"/>
                        <TextBlock x:Name="ResultText" 
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                    <TextBlock x:Name="ExplanationText" 
                               TextWrapping="Wrap" 
                               Opacity="0.8"/>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </Border>
</UserControl>